<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="First Name"
            android:ems="10"
            android:id="@+id/et_firstName"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true" android:layout_alignStart="@+id/et_username"/>

    <EditText
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="Last Name"
            android:ems="10"
            android:layout_alignTop="@+id/et_firstName" android:layout_toEndOf="@+id/et_firstName"
            android:layout_marginStart="14dp" android:id="@+id/et_lastName" android:layout_alignEnd="@+id/et_username"/>


    <EditText
            android:background="@color/white"
            android:hint="Username"
            android:layout_marginTop="20dp"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_firstName"
            android:layout_alignStart="@+id/et_password"
            android:layout_alignEnd="@+id/et_password"
    />

    <EditText
        android:background="@color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/et_username"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:background="@color/white"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/et_password"
        android:id="@+id/et_password2"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <EditText
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:layout_marginTop="20dp" android:id="@+id/et_phoneNumber" android:hint="Phone Number"
            android:layout_below="@+id/et_password2" android:layout_alignStart="@+id/et_password2"/>
    <EditText
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:ems="10"
            android:layout_below="@+id/et_phoneNumber" android:layout_alignStart="@+id/et_phoneNumber"
            android:layout_marginTop="20dp" android:id="@+id/et_email" android:layout_alignEnd="@+id/et_password2"/>
    <Button
            android:text="Sign Up"
            android:textSize="8pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" android:id="@+id/btn_signup"
            android:layout_below="@+id/et_email" android:layout_alignStart="@+id/et_email"
            android:layout_alignEnd="@+id/et_email"/>

    <View
            android:id="@+id/v_line_signup"
            android:layout_below="@+id/btn_signup"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
    <Button
            android:text="Back Home"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/v_line_signup"
            android:textSize="7pt"
            android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:id="@+id/btn_backHome"/>


</RelativeLayout>